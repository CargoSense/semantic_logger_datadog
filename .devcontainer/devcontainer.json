// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "semantic_logger_datadog",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:trixie",
  "features": {
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.4.7"
    },
    "ghcr.io/CargoSense/devcontainer-features/bundler:2": {}
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // An array of Docker CLI arguments that should be used when running the container.
  "runArgs": ["--name", "semantic_logger_datadog"],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": ".devcontainer/setup.sh",

  // Specify the command any tool should wait for before connecting.
  "waitFor": "postCreateCommand",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "jasonnutter.vscode-codeowners"
      ],
      "settings": {
        "rubyLsp.rubyVersionManager.identifier": "rvm"
      }
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
